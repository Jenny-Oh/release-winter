#include<stdio.h>

int main() {
	float a, b;
	char op;
	float *d, *e;
	printf("Input operand 1 :");
	scanf("%f", &a);
	printf("Input operand 2 :");
	scanf("%f", &b);
	d = &a;
	e = &b;
	printf("\n\nInput operator : ");
	getchar();
	scanf("%c", &op);
	
	//printf("%c\n", op);
	float c;

	if(op =='+') {
		c = *d + *e;
	}
	else if(op =='-') {
		c = *d - *e;
	}
	else if(op =='*') {
		c = *d * *e;
	}
	else if(op =='/') {
		c = *d / *e;
	}
	else c = 0;
	printf("\n\nResult : %.2f", c);
	return 0;
}
